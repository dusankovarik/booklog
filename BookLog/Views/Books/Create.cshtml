@using BookLog.Dtos

@model BookCreateEditDto

<h4>Create a new book</h4>
<form asp-action="Create" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div>
        <label asp-for="Title"></label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        @foreach (var author in Model.Authors) {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedAuthorIds" value="@author.Id" id="author_@author.Id" />
                <label class="form-check-label" for="author_@author.Id">@author.FullName</label>
            </div>
        }
    </div>
    <div>
        @foreach (var genre in Model.Genres) {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedGenreIds" value="@genre.Id" id="genre_@genre.Id" />
                <label class="form-check-label" for="genre_@genre.Id">@genre.Name</label>
            </div>
        }
    </div>
    <div>
        <label asp-for="CoverImageUrl"></label>
        <input type="url" class="form-control" asp-for="CoverImageUrl" />
        <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DatabazeKnihUrl"></label>
        <input type="url" class="form-control" asp-for="DatabazeKnihUrl" />
        <span asp-validation-for="DatabazeKnihUrl" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" value="Create" />
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
