@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "All Users";
}

<h1>All users</h1>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create</a>
</div>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>E-mail</th>
            <th>Update</th>
            <th>Delete</th>
            <th>ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser user in Model) {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Update</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-itemid="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
                <td>@user.Id</td>
            </tr>
        }
    </tbody>
</table>
